# Database - Use your Supabase PostgreSQL connection string
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# Supabase Configuration
VITE_SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_JWT_SECRET="your-jwt-secret-here"

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=https://your-vercel-app-domain.vercel.app

# Prisma Configuration
PRISMA_CLI_QUERY_ENGINE_TYPE=binary
PRISMA_QUERY_ENGINE_BINARY_AUTO_DOWNLOAD=true

# Security
SESSION_SECRET="your-session-secret-here"

# Optional: Analytics
VERCEL_ANALYTICS_ID="your-analytics-id"

# DIRECT_URL can be used by Prisma for migrations if needed (optional)
# DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@aws-1-REGION.pooler.supabase.com:5432/postgres"